<body>
  <h1>IdeaBox</h1>
  <form action='/' method='POST'>
    <p>
      Your Idea:
    </p>
    <input type='text' name='idea[title]' placeholder="Title"/><br/>
    <textarea name='idea[description]' placeholder="Description"></textarea><br/>
    <input type='text' name='idea[tags]' placeholder="Tags separated by commas"/><br/>
    <input type='submit'/>
  </form>
  <h3>Existing Ideas</h3>
  <form action="/weekday" method="POST">
    <input type="submit" value="Show ideas by day of week"/>
  </form>
  <form action="/hours" method="POST">
    <input type="submit" value="Show ideas by time of day"/>
  </form>
  <form action="/sort" method="POST">
    <input type="submit" value="Sort by all tags"/>
  </form>
  <form action="/sort_by_tag" method="POST">
    <input type='text' name='tag' placeholder="Tag to search"/><br/>
    <input type="submit" value="Sort by specific tag"/>
  </form>
  <ul>
    <% ideas.each do |idea| %>
      <li>
        <%= idea.title %> (<%= idea.id %>)<br/>
        <%= idea.description %>
        <form action="/<%= idea.id %>/like" method="POST" style="display: inline">
          <input type="submit" value="+"/>
        </form>
        <a href="/<%= idea.id %>/edit">Edit</a><br/>
        <%= idea.tags%>
        <%= idea.time %>
        <form action="/<%= idea.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="delete"/>
        </form>
      </li>
    <% end %>
  </ul>
</body>
